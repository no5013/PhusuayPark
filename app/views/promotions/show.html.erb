
<div class="container">
  <h1 class="text-left"><%= @promotion.title %></h1>

  <p class="date">
    Submitted <%= time_ago_in_words(@promotion.created_at) %> Ago
    <% if user_signed_in? %>
    | <%= link_to 'Edit', edit_promotion_path(@promotion) %>
    | <%= link_to 'Delete', promotion_path(@promotion), method: :delete, data: {confirm: 'Are you sure'} %>
    <% end %>
  </p>
  <hr class="intro-divider">


  <p class="body">
    <%= raw Markdown.new(@promotion.body).to_html %>
  </p>

</div>
