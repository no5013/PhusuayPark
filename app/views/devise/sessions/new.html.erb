<div class="container">
  <h1 class="text-left">Log in</h1>
  <hr class="intro-divider">
  <div class="col-lg-8 col-lg-offset-2">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group">
      <label for="inputEmail">Email address</label>
      <%= f.email_field :email, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"Email" %>
    </div>

    <div class="form-group">
      <label for="inputPassword">Password</label>
      <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"Password"%>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div class="check_box">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end -%>

    <div class="row">
      <div class="form-group col-xs-12">
        <%= f.submit "Log in", :class => "btn btn-send btn-lg center-block" %>
      </div>
    </div>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
